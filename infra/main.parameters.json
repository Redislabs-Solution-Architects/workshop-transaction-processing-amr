{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "type": "object",
    "properties": {
        "location": {
            "type": "string",
            "description": "Azure region for all resources"
        },
        "environmentName": {
            "type": "string",
            "description": "Unique environment name - auto-populated from Azure Developer CLI environment"
        },
        "redisSku": {
            "type": "string",
            "description": "Redis SKU (B3 = 3GB minimum for RediSearch)",
            "default": "Balanced_B3"
        }
    },
    "required": ["location"]
}
